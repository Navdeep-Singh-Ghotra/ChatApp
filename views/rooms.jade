extends layout

block content
    h1 Chat Rooms
    a.btn.btn-primary(href="/admin/rooms/add") Create new chat room
    table.table.table-striped
        thead
            tr
                th
                th Name
                th
                th Id
        tbody
            each room in rooms
                
                tr
                    td(style="width: 50px;"): a.btn.btn-primary(href="/admin/rooms/delete/#{room.id}") Delete room
                    td= room.name
                    td(style="width: 50px;"): a.btn.btn-primary(href="/admin/rooms/edit/#{room.id}") Edit room
                    td= room.id
