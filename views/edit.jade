extends layout

block content
    h1 Edit chat room

    form(method="post")
        fieldset.form-group
            label(for="name") Name:
            input(name = "name", type="text", placeholder="Enter a name", value="#{room.name}")
            small.text-muted Name the room
        button.btn-primary(type="submit") Save chat room
        a.btn.btn-default(href="/admin/rooms") Cancel
    